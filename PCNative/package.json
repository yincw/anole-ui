{
  "name": "pcnative",
  "version": "1.0.0",
  "description": "VD project boilerplate",
  "main": "./dist/main.js",
  "scripts": {
    "rebuild": "npm i -S sqlite3 --build-from-source --runtime=electron --target=1.8.6 --dist-url=https://atom.io/download/electron",
    "start": "cross-env electronMode=dev PC_CLIENT=1 node --trace-warnings -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --mode development --config webpack.config.dev.js",
    "start-main-dev": "npm run release-main && electron -r babel-register .",
    "start-main": "cross-env electronMode=preview npm run release-electron && electron -r babel-register .",
    "doc": "styleguidist server",
    "doc-build": "styleguidist build",
    "test": "jest",
    "release": "cross-env operation=separateCSS PC_CLIENT=1 node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --mode production --config webpack.config.prod.js --colors --progress",
    "release-main": "node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --mode production --config webpack.config.main.prod.js --colors --progress",
    "release-electron": "npm run release && npm run release-main",
    "deploy": "npm run release && deploy-client",
    "package": "cross-env electronMode=package npm run release-electron && build --publish never",
    "package-mac": "cross-env electronMode=package npm run release-electron && build --mac",
    "package-win": "cross-env electronMode=package npm run release-electron && build --win"
  },
  "build": {
    "productName": "PCNative",
    "appId": "com.fulu.pcnative",
    "asar": false,
    "files": [
      "dist/"
    ],
    "extraFiles": [
      "debug.bat",
      "CHANGELOG.md"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "artifactName": "PCNative Setup ${version}.${ext}",
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "PCNative",
      "menuCategory": "pcnative",
      "shortcutName": "PCNative",
      "include": "installer.nsh"
    },
    "dmg": {
      "icon": "resources/dmg.icns",
      "title": "${productName}",
      "contents": [
        {
          "x": 130,
          "y": 190
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yincw/webpack-boilerplate.git"
  },
  "keywords": [
    "Webpack",
    "Babel",
    "ESLint",
    "Jest",
    "Enzyme",
    "Styleguidist",
    "Electron",
    "Sqlite3",
    "Axios",
    "Redux",
    "PostCSS",
    "Less",
    "Ant Design"
  ],
  "author": "福禄网络 UED",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yincw/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/yincw/webpack-boilerplate#readme",
  "dependencies": {
    "sequelize": "^4.37.6",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "antd": "^3.4.3",
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^8.3.0",
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-dva-hmr": "^0.4.1",
    "babel-plugin-import": "^1.7.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-recharts": "^1.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.23.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "dva": "^2.2.3",
    "dva-loading": "^2.0.1",
    "dva-model-extend": "^0.1.2",
    "electron": "1.8.6",
    "electron-builder": "^20.10.0",
    "electron-log": "^2.2.14",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.2.0",
    "jest": "^22.4.3",
    "jquery": "^3.3.1",
    "konva": "^2.0.3",
    "less": "^3.0.2",
    "less-loader": "^4.1.0",
    "lodash": "^4.17.5",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.4.0",
    "mockjs": "^1.0.1-beta3",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "postcss-loader": "^2.1.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.3.2",
    "react-konva": "^1.7.2",
    "react-motion": "^0.5.2",
    "react-styleguidist": "^7.0.8",
    "react-test-renderer": "^16.3.2",
    "recharts": "^1.0.0-beta.10",
    "redbox-react": "^1.5.0",
    "redux-auth-wrapper": "^2.0.2",
    "rework.less": "^1.0.0",
    "semver": "^5.5.0",
    "style-loader": "^0.21.0",
    "svg-sprite-loader": "^3.7.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "web-deploy": "^0.2.0",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2",
    "webpack-spritesmith": "^0.4.1"
  }
}
